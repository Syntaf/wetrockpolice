<div class="membership-join header">
  <h2>Join SNCC</h2>
</div>
<div class="membership-join page-content">
  <%= form_for @joint_membership,
    url: { action: "create" },
    builder: MaterialFormsHelper::MaterialFormBuilder,
    html: { class: "membership-form container", id: 'membership-form' } do |f| %>

    <%= f.hidden_field :organization, :value => @watched_area.local_climbing_org.name %>
    <%= f.hidden_field :order_id, :value => nil, data: { :role => 'orderId' } %>

    <div class="row">
      <div class="col-md-6 col-12 form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, required: true %>
      </div>

      <div class="col-md-6 col-12 form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 col-12 form-group">
        <%= f.label :email %>
        <%= f.email_field :email, required: true %>
      </div>
      <div class="col-md-6 col-12 form-group">
        <%= f.label :phone_number %>
        <%= f.telephone_field :phone_number %>
      </div>
    </div>

    <div class="row divider"></div>

    <div class="row">
      <div class="col-md-6 col-12 form-group">
        <%= f.label :streel_line_1 %>
        <%= f.text_field :street_line_one, required: true %>
      </div>
      <div class="col-md-6 col-12 form-group">
        <%= f.label :street_line_2 %>
        <%= f.text_field :street_line_two %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 col-12 form-group">
        <%= f.label :shirt_type %>
        <%= f.select :shirt_type, ["Local", "AccessFund"] %>
      </div>
      <div class="col-md-6 col-12 form-group">
        <%= f.label :shirt_size %>
        <%= f.select :shirt_size, [ "MS", "MM", "ML", "MXL", "WS", "WM", "WL", "WXL" ] %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 col-12 form-group">
        <%= f.label :city %>
        <%= f.text_field :city, required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 col-12 form-group">
        <%= f.label :state %>
        <%= f.text_field :state, required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 col-12 form-group">
        <%= f.label :postal_code %>
        <%= f.number_field :zipcode, required: true %>
      </div>
    </div>

    <div class="row" id="paypal">

    </div>
    
  <% end %>
</div>

